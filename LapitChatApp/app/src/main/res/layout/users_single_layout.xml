<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_civSingleUser"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/users_txvSingleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/users_civSingleUser"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/users_civSingleUser"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/users_txvSingleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/users_civSingleUser"
        android:layout_alignStart="@+id/users_txvSingleName"
        android:layout_marginBottom="10dp"
        android:text="User default Status" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon"
        android:layout_alignTop="@+id/users_txvSingleName"
        android:layout_alignBottom="@id/users_txvSingleName"
        android:layout_toEndOf="@+id/users_txvSingleName" />

</RelativeLayout>